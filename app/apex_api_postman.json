									"    // 将整个响应数据存储到环境变量",
									"    pm.environment.set(\"system_config\", JSON.stringify(jsonData.data));",
									"    ",
									"    // 存储各个配置类型",
									"    if (jsonData.data.models) {",
									"        pm.environment.set(\"config_models\", JSON.stringify(jsonData.data.models));",
									"    }",
									"    if (jsonData.data.pricing) {",
									"        pm.environment.set(\"config_pricing\", JSON.stringify(jsonData.data.pricing));",
									"    }",
									"    if (jsonData.data.usage) {",
									"        pm.environment.set(\"config_usage\", JSON.stringify(jsonData.data.usage));",
									"    }",
									"    if (jsonData.data.settings) {",
									"        pm.environment.set(\"config_settings\", JSON.stringify(jsonData.data.settings));",
									"    }",
									"}"
								],
								"type": "text/javascript"
