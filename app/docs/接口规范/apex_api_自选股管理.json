					"raw": "{{base_url}}/api/favorite-stocks?user_id=default&category=银行股&limit=100&skip=0&sort_by=created_at&sort_order=desc",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"favorite-stocks"
					],
					"query": [
						{
							"key": "user_id",
							"value": "default",
							"description": "用户ID，默认\"default\""
						},
						{
							"key": "stock_code",
							"value": "",
							"description": "股票代码（可选，用于精确查询）",
							"disabled": true
						},
						{
							"key": "category",
							"value": "银行股",
							"description": "分类（可选）"
						},
						{
							"key": "tag",
							"value": "",
							"description": "标签（可选）",
							"disabled": true
						},
						{
							"key": "limit",
							"value": "100",
							"description": "最大返回数量，默认100，范围1-1000"
						},
						{
							"key": "skip",
							"value": "0",
							"description": "跳过记录数（用于分页），默认0"
						},
						{
							"key": "sort_by",
							"value": "created_at",
							"description": "排序字段，默认\"created_at\""
						},
						{
							"key": "sort_order",
							"value": "desc",
							"description": "排序方向（asc/desc），默认\"desc\""
						}
					]
				},
				"description": "查询自选股列表，支持按用户ID、股票代码、分类、标签等条件过滤，支持分页和排序。"
			},
			"response": []
		},
