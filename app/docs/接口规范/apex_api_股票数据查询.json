{
	"info": {
		"_postman_id": "stock-data-collection",
		"name": "TradingAgents API - 股票数据查询",
		"description": "股票基础信息、历史数据和分析报告查询相关接口",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "股票基础信息",
			"item": [
				{
					"name": "获取单只股票基础信息",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/stock-data/basic-info/000001",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"basic-info",
								"000001"
							]
						},
						"description": "从 MongoDB 的 stock_dict 集合中获取指定股票的基础信息"
					},
					"response": []
				},
				{
					"name": "获取全部股票列表",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/stock-data/list",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"list"
							]
						},
						"description": "获取系统中所有可用股票的基础信息列表"
					},
					"response": []
				}
			]
		},
		{
			"name": "历史交易数据",
			"item": [
				{
					"name": "获取股票历史交易数据",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/stock-data/historical-data/000001.SZ?start_date=2025-01-01&end_date=2025-03-31&expected_points=60",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"historical-data",
								"000001.SZ"
							],
							"query": [
								{
									"key": "start_date",
									"value": "2025-01-01"
								},
								{
									"key": "end_date",
									"value": "2025-03-31"
								},
								{
									"key": "analysis_date",
									"value": ""
								},
								{
									"key": "expected_points",
									"value": "60"
								}
							]
						},
						"description": "获取指定股票在给定日期区间内的历史交易数据；当数据量不足时，会自动向前扩展日期范围以补足到期望的数据点数量。"
					},
					"response": []
				}
			]
		},
		{
			"name": "分析报告查询",
			"item": [
				{
					"name": "按股票查询分析报告列表",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/stock-data/analysis-reports/600519?limit=50",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"analysis-reports",
								"600519"
							],
							"query": [
								{
									"key": "limit",
									"value": "50"
								},
								{
									"key": "start_date",
									"value": ""
								},
								{
									"key": "end_date",
									"value": ""
								}
							]
						},
						"description": "根据股票代码查询分析报告列表，可选按时间区间过滤；结果按时间倒序返回。"
					},
					"response": []
				},
				{
					"name": "查询所有股票的最新分析报告",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/stock-data/analysis-reports/all?limit=100",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"analysis-reports",
								"all"
							],
							"query": [
								{
									"key": "limit",
									"value": "100"
								},
								{
									"key": "start_date",
									"value": ""
								},
								{
									"key": "end_date",
									"value": ""
								}
							]
						},
						"description": "使用特殊代码 all，获取所有股票的最新分析报告列表。"
					},
					"response": []
				}
			]
		},
		{
			"name": "板块查询",
			"item": [
				{
					"name": "根据股票代码查询所属板块",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/stock-data/sectors_by_id/000001",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"sectors_by_id",
								"000001"
							]
						},
						"description": "根据股票代码查询该股票所属的概念板块和行业板块"
					},
					"response": []
				},
				{
					"name": "根据公司名称查询所属板块",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/stock-data/sectors_by_name/平安银行",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"sectors_by_name",
								"平安银行"
							]
						},
						"description": "根据上市公司名称查询该股票所属的概念板块和行业板块"
					},
					"response": []
				},
				{
					"name": "查询行业板块股票列表",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"industry_names\": [\"银行\", \"证券\", \"保险\"]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/stock-data/sectors/industry/stocks",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"sectors",
								"industry",
								"stocks"
							]
						},
						"description": "根据指定的行业板块名称列表，返回每个行业板块包含的股票代码列表"
					},
					"response": []
				},
				{
					"name": "查询概念板块股票列表",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"concept_names\": [\"新能源\", \"人工智能\", \"5G\"]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/stock-data/sectors/concept/stocks",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"sectors",
								"concept",
								"stocks"
							]
						},
						"description": "根据指定的概念板块名称列表，返回每个概念板块包含的股票代码列表"
					},
					"response": []
				},
				{
					"name": "更新板块数据（全部）",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/stock-data/sectors/update?update_concept=true&update_industry=true",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"sectors",
								"update"
							],
							"query": [
								{
									"key": "update_concept",
									"value": "true"
								},
								{
									"key": "update_industry",
									"value": "true"
								}
							]
						},
						"description": "更新概念板块和行业板块的数据（从 akshare 获取最新数据）"
					},
					"response": []
				},
				{
					"name": "更新板块数据（仅概念）",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/stock-data/sectors/update?update_concept=true&update_industry=false",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"sectors",
								"update"
							],
							"query": [
								{
									"key": "update_concept",
									"value": "true"
								},
								{
									"key": "update_industry",
									"value": "false"
								}
							]
						},
						"description": "仅更新概念板块数据"
					},
					"response": []
				},
				{
					"name": "更新板块数据（仅行业）",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/stock-data/sectors/update?update_concept=false&update_industry=true",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"stock-data",
								"sectors",
								"update"
							],
							"query": [
								{
									"key": "update_concept",
									"value": "false"
								},
								{
									"key": "update_industry",
									"value": "true"
								}
							]
						},
						"description": "仅更新行业板块数据"
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		}
	]
}



